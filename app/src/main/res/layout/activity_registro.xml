<?xml version="1.0"?>
<LinearLayout tools:background="@color/colorAccent"
    android:weightSum="1"
    android:orientation="vertical"
    android:layout_below="@+id/winRegistro"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/segunda"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp">
        <!--Logo Start -->
        <!-- Logo Ends -->
        <!-- Username Label -->
        <TextView android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Usuario"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/nombreUsuario"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Servicio"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/nombreServicio"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginBottom="20dp"/>
        <!-- Password Label -->
        <TextView android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Password"/>
        <EditText android:id="@+id/claveUsuario"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:password="true"/>
        <!-- Login Button -->
        <Button android:id="@+id/btnRegistro"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Registrarse"
            android:layout_marginTop="10dp"/>
        <TextView android:id="@+id/badLog"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Usuario o ContraseÃ±a incorrecta"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:textColor="#ff121a"/>
        <ScrollView android:id="@+id/segunda"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:fillViewport="true"/>
    </LinearLayout>
</LinearLayout>