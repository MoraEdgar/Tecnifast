<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:weightSum="1"
    android:layout_below="@+id/winLogin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"/>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="890dp"
        android:layout_below="@+id/segunda"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">
        <!--Logo Start -->
        <ImageView
            android:id="@+id/logoTecni"
            android:layout_width="wrap_content"
            android:layout_height="211dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/logoservicio" />
        <!-- Logo Ends -->
        <!-- Username Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Usuario" />

        <EditText
            android:id="@+id/nombreUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="1" />
        <!-- Password Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/claveUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:password="true" />
        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Login" />

        <TextView
            android:id="@+id/badLog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Usuario o ContraseÃ±a incorrecta"
            android:textColor="#ff121a"
            android:visibility="invisible"
            android:layout_weight="0.32" />

        <ScrollView
            android:id="@+id/segunda"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"></ScrollView>

    </LinearLayout>


</LinearLayout>